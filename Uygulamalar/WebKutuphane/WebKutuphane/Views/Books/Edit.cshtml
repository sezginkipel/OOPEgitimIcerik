@model WebKutuphane.Models.BooksViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "../Shared/_Layout.cshtml";

}
@Html.Partial("../Components/_Navbar.cshtml")
<div class="container mt-5">

    <h1>Edit</h1>

    <h4>Books</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="@Model.BookId" />
                <div class="form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" name="Title" class="form-control" placeholder="@Model.Title" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label asp-for="@Model.GenreName" class="control-label"></label>
                    <input asp-for="@Model.GenresRef.Id" class="form-control" placeholder="@Model.GenresRef.Id" />
                    <span asp-validation-for="@Model.GenreName" class="text-danger"></span>
                </div>

                <div>
                    
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Author" class="control-label"></label>
                    <input asp-for="@Model.Author" class="form-control" placeholder="@Model.Author" />
                    <span asp-validation-for="@Model.Author" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.CreatedDate" class="control-label"></label>
                    <input asp-for="@Model.CreatedDate" class="form-control" placeholder="@Model.CreatedDate" />
                    <span asp-validation-for="@Model.CreatedDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.UpdatedTime" class="control-label"></label>
                    <input asp-for="@Model.UpdatedTime" class="form-control" />
                    <span asp-validation-for="@Model.UpdatedTime" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

</div>