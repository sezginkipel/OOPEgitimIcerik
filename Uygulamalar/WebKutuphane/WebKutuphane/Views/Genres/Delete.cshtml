@model WebKutuphane.Models.Genres

@{
	Layout = "../Shared/_Layout.cshtml";

	ViewData["Title"] = "Delete";
}
@Html.Partial("../Components/_Navbar.cshtml")

<div class="container mt-5">


	<h1>Türü Sil</h1>
	<hr />

	<h3>Bu içeriği silmek istediğinize emin misiniz?</h3>
	<div>
		<dl class="row">
			<dt class="col-sm-2">
				Tür Adı:
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.Name)
			</dd>
		</dl>

		<form asp-action="Delete">
			<input type="hidden" asp-for="Id" />
			<input type="submit" value="Onayla" class="btn btn-danger" />
			<a asp-action="Index" class="btn btn-secondary">Listeye dön</a>
		</form>
	</div>
</div>