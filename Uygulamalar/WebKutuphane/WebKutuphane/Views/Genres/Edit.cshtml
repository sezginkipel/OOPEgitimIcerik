@model WebKutuphane.Models.Genres

@{
    Layout = "../Shared/_Layout.cshtml";

    ViewData["Title"] = "Edit";
}
@Html.Partial("../Components/_Navbar.cshtml")

<div class="container mt-5">

<h1>Tür Düzenle</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label">Tür Adı</label>
                <input asp-for="Name" class="form-control mt-1" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary mt-2" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Listeye dön</a>
</div>
